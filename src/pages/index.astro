---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import WideBlock from '../components/WideBlock.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

let useRealName: boolean = true;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-black">
		<h1 class="text-white text-center text-[400px] m-0 font-mono p-0 leading-[300px] mt-5">SAMUEL</h1>
		<img src="/SL2_black.svg" alt="SL_black" class="fixed top-[25%] h-[50%] left-[50%] -translate-x-[50%] z-5">
		<h1 class="text-white text-center text-[400px] m-0 font-mono p-0 leading-[300px] mt-[220px]">LÉOBON</h1>
		<main class="mt-[120px]">
			<WideBlock title="About Me">
				<p>
					Hi ! I'm Samuel Léobon, a computer science student based in France. I specialize in fullstack development and gamedev 
					(I want to create my own video game studio), and love creating and building things.
				</p>
			</WideBlock>
			<WideBlock title="Projects">
				<div class="flex flex-row">
					<div class="ml-auto mr-auto pr-10">
						<h3>Programming</h3>
					</div>
					<div class="ml-auto mr-auto pl-10">
						<h3>Personal</h3>
					</div>
				</div>
			</WideBlock>
		</main>
		<Footer />
	</body>
</html>
