---
interface Props {
    title: string;
}

const {title} = Astro.props;
---

<div class="bg-softred border-4 border-white border-r-10 w-[30%] p-12 font-mono text-white mt-20 ml-auto mr-auto z-10 relative shadow-[0_0_50px_0px_#990020]">
    <h3 class="text-3xl text-center">{title}</h3><br>
    <slot />
</div>